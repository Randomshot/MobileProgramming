<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routinerecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/menuslayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/menuslayout"
        android:layout_width="318dp"
        android:layout_height="145dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routinerecycler">

        <Button
            android:id="@+id/routineupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="루틴 조정" />

        <Button
            android:id="@+id/exerciseinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="운동 정보" />

        <Button
            android:id="@+id/exercisereport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="운동 일지" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
