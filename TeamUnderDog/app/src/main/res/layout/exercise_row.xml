<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exerciseRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#2C2196F3"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/exerciseTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7C03A9F4"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2303A9F4"
            android:gravity="center"
            android:text="운동량"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exerciseSetsNumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2303A9F4"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exerciseWeightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2303A9F4"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exerciseCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2303A9F4"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>